{
    "manifests": {
        "pxsw/project": {
            "manifest": {
                "copy-from-recipe": {
                    "config/": "%CONFIG_DIR%/",
                    "root/": ""
                },
                "env": {
                    "#1": "CDN_URL=https://your-project.b-cdn.net/",
                    "ASSET_URL": "/",
                    "#2": "Redis Configuration",
                    "#3": "REDIS_SESSION_URL=redis://ddev-shopware-redis:6379/0",
                    "#4": "REDIS_CACHE_URL=redis://ddev-shopware-redis:6379/1",
                    "#5": "REDIS_CART_URL=redis://ddev-shopware-redis:6379/2",
                    "#6": "for lock redis use default LOCK_DSN",
                    "#7": "Shopware Configuration",
                    "ENABLE_SERVICES": "false",
                    "#8": "Disable Commercial Features that are not used @see https://developer.shopware.com/docs/products/extensions/commercial/#disable-features",
                    "#9": "SHOPWARE_COMMERCIAL_ENABLED_BUNDLES=AdvancedSearch,WebhookFlowAction,FlowSharing,DelayedFlowAction",
                    "#10": "SHOPWARE_SKIP_CONNECTION_VARIABLES=1",
                    "SHOPWARE_CACHE_ID": "sw-cache"
                },
                "gitignore": [
                    "**/*.hot-update.js",
                    "**/*.hot-update.json",
                    "custom/*plugins/Pxsw*/src/Resources/app/storefront/dist/storefront/js/",
                    "custom/*plugins/Pxsw*/src/Resources/app/administration/src/scss/*.index.scss",
                    "custom/*plugins/Pxsw*/src/Resources/app/administration/src/px/**/*index.*",
                    "custom/*plugins/Pxsw*/src/Resources/views/administration/*",
                    "custom/*plugins/Pxsw*/src/Resources/app/shared/*/*.index.scss",
                    "custom/*plugins/Pxsw*/src/Resources/app/storefront/private/**/*.index.scss",
                    "custom/*plugins/Pxsw*/src/Resources/app/storefront/private/index.js",
                    "custom/*plugins/Pxsw*/src/Resources/public",
                    "custom/*plugins/*/src/Resources/app/administration/.tmp",
                    "/public/sprite/*",
                    "/public/fonts/*",
                    "/public/img/*",
                    "/public/css/*",
                    "/public/js/*"
                ]
            },
            "files": {
                "config/packages/twig.yaml": {
                    "contents": [
                        "twig:",
                        "    globals:",
                        "        asset_url: '%env(ASSET_URL)%'",
                        ""
                    ],
                    "executable": false
                },
                "root/.eslintignore": {
                    "contents": [
                        "node_modules",
                        "dist",
                        "*.twig",
                        "vendor",
                        "custom/apps/*",
                        ""
                    ],
                    "executable": false
                },
                "root/package.json": {
                    "contents": [
                        "{",
                        "    \"name\": \"shopware-shopware\",",
                        "    \"description\": \"Shopware 6 Base setup with plugins\",",
                        "    \"version\": \"6.7\",",
                        "    \"author\": \"pixolith GmbH & Co KG\",",
                        "    \"scripts\": {",
                        "        \"clean\": \"rimraf -g 'custom/plugins/*/src/Resources/views/administration/**/*.twig' 'vendor/pxsw/*/src/Resources/views/administration/**/*.twig' 'public/js/*.*' 'public/css/*.*' 'var/px_plugins.json'\",",
                        "        \"dev\": \"npm run sf:dev\",",
                        "        \"sf:dev\": \"npm run clean && cross-env SHOPWARE_MODE=storefront NODE_ENV=development webpack-dev-server --hot\",",
                        "        \"sf:build\": \"cross-env SHOPWARE_MODE=storefront NODE_ENV=production webpack\",",
                        "        \"build\": \"npm run clean && concurrently \\\"npm run sf:build\\\" \\\"npm run admin:build\\\" \\\"npm run admin:build:sw\\\"\",",
                        "        \"admin\": \"npm run admin:dev\",",
                        "        \"admin:dev\": \"ddev exec bash bin/watch-administration.sh\",",
                        "        \"admin:build\": \"cross-env SHOPWARE_MODE=administration NODE_ENV=production webpack\",",
                        "        \"admin:build:sw\": \"command -v ddev >/dev/null 2>&1 && ddev exec bash bin/build-administration.sh || npm run admin:cibuild\",",
                        "        \"admin:cibuild\": \"CI=1 SHOPWARE_SKIP_ENTITY_SCHEMA_DUMP=1 SHOPWARE_SKIP_ASSET_COPY=1 bash bin/build-administration.sh\",",
                        "        \"cache:clear\": \"ddev exec php bin/console cache:clear && ddev exec php bin/console cache:pool:clear --all\",",
                        "        \"theme:compile\": \"ddev exec php bin/console theme:compile\",",
                        "        \"db:dump\": \"ddev export-db -f deployment/local/sw_shopware_dev.sql.gz\",",
                        "        \"db:restore\": \"ddev import-db -f deployment/local/sw_shopware_dev.sql.gz\",",
                        "        \"fix-style\": \"stylelint --fix 'custom/*plugins/Pxsw*/src/Resources/app/**/*.scss'\",",
                        "        \"fix-js\": \"eslint --fix 'custom/*plugins/Pxsw*/src/Resources/app/**/*.js'\",",
                        "        \"fix-php\": \"vendor/bin/php-cs-fixer fix\",",
                        "        \"prettier\": \"npm run fix-style && npm run fix-js\"",
                        "    },",
                        "    \"browserslist\": {",
                        "        \"storefront\": [",
                        "            \">= 0.5%\",",
                        "            \"last 2 major versions\",",
                        "            \"not dead\"",
                        "        ],",
                        "        \"administration\": [",
                        "            \"last 1 chrome version\",",
                        "            \"last 1 firefox version\",",
                        "            \"last 1 safari version\"",
                        "        ]",
                        "    },",
                        "    \"prettier\": \"@pixolith/prettier-config\",",
                        "    \"eslintConfig\": {",
                        "        \"extends\": \"@pixolith/eslint-config-sw6\"",
                        "    },",
                        "    \"stylelint\": {",
                        "        \"extends\": \"@pixolith/stylelint-config-standard\"",
                        "    },",
                        "    \"percy\": {",
                        "        \"version\": 2",
                        "    },",
                        "    \"devDependencies\": {",
                        "        \"@pixolith/eslint-config-sw6\": \"11.0.0\",",
                        "        \"@pixolith/stylelint-config-standard\": \"11.0.0\",",
                        "        \"@pixolith/webpack-sw6-config\": \"11.0.7\"",
                        "    }",
                        "}",
                        ""
                    ],
                    "executable": false
                },
                "root/webpack.config.js": {
                    "contents": [
                        "let Fs = require('fs');",
                        "",
                        "if (process.env.SHOPWARE_MODE === 'storefront') {",
                        "    process.env.PUBLIC_PATH = './public';",
                        "",
                        "    // browserslist config in package.json",
                        "    process.env.BROWSERSLIST_ENV = 'storefront';",
                        "}",
                        "",
                        "if (process.env.SHOPWARE_MODE === 'administration') {",
                        "    process.env.PUBLIC_PATH = './public';",
                        "",
                        "    process.env.PX_ENTRY_PATH = 'src/Resources/app/administration/src/px';",
                        "    process.env.SHARED_SCSS_PATH = '../../../shared';",
                        "    process.env.SHOPWARE_VERSION = '6.7';",
                        "",
                        "    // browserslist config in package.json",
                        "    process.env.BROWSERSLIST_ENV = 'administration';",
                        "}",
                        "",
                        "let sharedVendorResourcePaths = Fs.existsSync('vendor/pxsw')",
                        "    ? ['vendor/pxsw/*/src/Resources/app/_global_resources/**/*.scss']",
                        "    : [];",
                        "",
                        "let sharedPluginResourcePaths = Fs.existsSync('custom/plugins')",
                        "    ? ['custom/plugins/Pxsw*/src/Resources/app/_global_resources/**/*.scss']",
                        "    : [];",
                        "",
                        "let uses = Fs.existsSync('vendor/pxsw/project/src/Resources/app/uses.scss')",
                        "    ? ['vendor/pxsw/project/src/Resources/app/uses.scss']",
                        "    : [];",
                        "",
                        "process.env.RESOURCES_PATHS = JSON.stringify([",
                        "    ...uses,",
                        "    ...sharedVendorResourcePaths,",
                        "    ...sharedPluginResourcePaths,",
                        "]);",
                        "",
                        "if (",
                        "    !(",
                        "        process.env.SHOPWARE_MODE === 'storefront' ||",
                        "        process.env.SHOPWARE_MODE === 'administration'",
                        "    )",
                        ") {",
                        "    process.stderr.write(",
                        "        'SHOPWARE_MODE needs to be storefront or administration',",
                        "    );",
                        "    process.exit(1);",
                        "}",
                        "",
                        "module.exports = require('@pixolith/webpack-sw6-config')[process.env.SHOPWARE_MODE];",
                        ""
                    ],
                    "executable": false
                }
            },
            "ref": "50c28a7414bdadb89c756f235f42594e4ac31498"
        }
    }
}
